//Consulta 2
UPDATE Alumno SET Nombre = "Julio", Edad = 23, Carnet=20000 WHERE Nombre=="Alumno1" && Edad<18;          //Modifica el primer registro

//Consulta 3
Insert into Alumno(Nombre,Carnet) values("Luis", 201602656);
Insert into Alumno(Nombre,Carnet) values("Rainman", 201600000);
Select * from Alumno where  Carnet % 2 == 0;                  // Solo deberiamos de estar los 3  auxiliares


